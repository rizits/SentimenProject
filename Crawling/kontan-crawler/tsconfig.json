{
    "compilerOptions": {
      "target": "ES2015",
      "lib": ["ES2015", "DOM"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "sourceMap": true
    },
    "include": ["*.ts"],  // Include all TypeScript files in the same directory as tsconfig.json
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  